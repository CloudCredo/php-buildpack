#!/usr/bin/env bash

mode=${1:-''}
stack=${2:-'lucid'}

if [ $# -eq 0 ] || ([ $mode != "online" ] && [ $mode != "offline" ]); then
  echo "Usage:"
  echo "  $0 online|offline"
  exit 1
fi

if [ "$mode" == "offline" ]; then
  if [ "$stack" == "lucid" ]; then
    ./bin/binaries zip --index binaries/lucid/index-all.json --cache
  elif [ "$stack" == "trusty" ]; then
    ./bin/binaries zip --index binaries/trusty/index-all.json --cache
  fi
  exit 0
else
  zip -r php_buildpack-v`cat VERSION`.zip \
    binaries/**/*.json \
    bin/* \
    defaults/* \
    extensions/* \
    lib/* \
    scripts/* \
    VERSION \
    -x *.pyc*
  exit 0
fi

